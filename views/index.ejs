<script>
  (function() {
    // Локализованный массив участников команды
    const team = <%- JSON.stringify(t('team.members')) %>;
    // Массив фото (индексы должны совпадать с team)
    const photos = [
      'images/director.jpg',
      'images/defec1.jpeg',
      'images/defec2.jpeg',
      'images/defec3.jpeg',
      'images/defec4.jpeg',
      'images/defec5.jpeg',
      'images/defec6.jpeg',
      'images/defec7.jpeg',
      'images/defec8.jpeg',
      'images/defec9.jpeg',
      'images/defec10.jpeg',
      'images/afk.jpeg',
      'images/defec11.jpeg'
    ];

    let idx = 0;
    const photoEl = document.getElementById('team-photo');
    const nameEl  = document.getElementById('team-name');
    const roleEl  = document.getElementById('team-role');
    const subroleEl  = document.getElementById('team-subrole');
    const stageEl = document.getElementById('team-stage');
    const quoteEl = document.getElementById('team-quote');

    function render() {
      const m = team[idx];
      photoEl.src = photos[idx] || '';
      photoEl.alt = m.name;
      nameEl.textContent = m.name;
      roleEl.innerHTML = m.role;
      stageEl.textContent = m.stage;
      quoteEl.textContent = m.quote || '';
      // subroleEl не используется, очищаем
      if(subroleEl) subroleEl.textContent = '';
    }

    document.querySelector('.left-btn').addEventListener('click', () => {
      idx = (idx - 1 + team.length) % team.length;
      render();
    });

    document.querySelector('.right-btn').addEventListener('click', () => {
      idx = (idx + 1) % team.length;
      render();
    });

    render();
  })();
</script>



